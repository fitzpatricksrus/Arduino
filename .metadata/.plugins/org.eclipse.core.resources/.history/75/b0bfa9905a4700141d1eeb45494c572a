#ifndef OUTPUTPINS_H_
#define OUTPUTPINS_H_

class OutputPins {
public:
	enum DigitalPinValue { DIGITAL_LOW, DIGITAL_HIGH };

    OutputPins(int pins[], int pinCount);
	virtual ~OutputPins();
    void initialize();
    int getPin(int pinNdx);
    void setPin(int pinNdx, int value);
    void setPin(int pinNdx, DigitalPinValue setHigh);
    int getPinCount();
private:
    int* pinNumber;
    int* pinValue;
    int pinCount;
};
#endif /* OUTPUTPINS_H_ */
