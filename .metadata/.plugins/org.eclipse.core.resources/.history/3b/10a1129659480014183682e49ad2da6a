#ifndef DEBUGGABLE_H_
#define DEBUGGABLE_H_

class Debuggable {
public:
	Debuggable();
	virtual ~Debuggable();
	inline void setDebug(bool debugOnIn) { debugOn = debugOnIn; }
	void println(String msg);
private:
	bool debugOn;
};

#endif /* DEBUGGABLE_H_ */
